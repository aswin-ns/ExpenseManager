<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.androidhive.expensemanager.adapter.ViewSummary">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_pie"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:weightSum="100">

        <LinearLayout android:id="@+id/chart_1" android:orientation="horizontal"
            android:layout_below="@+id/btn_pie"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="50"

            />

        <LinearLayout android:id="@+id/chart_2" android:orientation="horizontal"
            android:layout_below="@+id/chart_2"
            android:layout_marginTop="100dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="50"
             />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_date_summary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="ShowDateNew" />


</RelativeLayout>
